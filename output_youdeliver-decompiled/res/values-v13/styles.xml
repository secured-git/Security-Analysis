<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Sherlock.ActionBar.TabText" parent="@style/Widget">
        <item name="android:textAppearance">@null</item>
        <item name="android:textSize">12.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?textColorPrimary</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">2</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="TextAppearance.Sherlock.Widget.ActionBar.Menu" parent="@style/Widget">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?actionMenuTextColor</item>
        <item name="android:textAllCaps">@bool/abs__config_actionMenuItemAllCaps</item>
    </style>
    <style name="LiferandoTheme" parent="@style/ParentTheme">
        <item name="android:buttonStyle">@style/WhiteTextButton</item>
        <item name="android:buttonStyleToggle">@style/WhiteToggleButton</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:listViewStyle">@style/NoScrollBarList</item>
        <item name="android:ratingBarStyle">@style/CustomRatingBar</item>
        <item name="android:scrollViewStyle">@style/NoScrollBarView</item>
        <item name="android:textViewStyle">@style/BlackText</item>
        <item name="android:actionBarStyle">@style/LieferandoActionBarTheme</item>
        <item name="android:popupMenuStyle">@style/MyPopupMenu</item>
        <item name="android:actionMenuTextAppearance">@style/MyTextAppearance</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar_pressed_item_bg</item>
        <item name="vpiLinePageIndicatorStyle">@style/CustomLinePageIndicator</item>
        <item name="vpiTitlePageIndicatorStyle">@style/CustomTitlePageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <item name="vpiUnderlinePageIndicatorStyle">@style/CustomUnderlinePageIndicator</item>
        <item name="actionBarStyle">@style/LieferandoActionBarTheme</item>
        <item name="actionBarItemBackground">@drawable/actionbar_pressed_item_bg</item>
        <item name="actionMenuTextAppearance">@style/MyTextAppearance</item>
        <item name="searchAutoCompleteTextView">@style/searchTextView</item>
        <item name="searchViewSearchIcon">@drawable/ic_action_search</item>
        <item name="popupMenuStyle">@style/MyPopupMenu</item>
    </style>
    <style name="LieferandoTabletTheme" parent="@style/ParentTheme">
        <item name="android:buttonStyle">@style/WhiteTextButton</item>
        <item name="android:buttonStyleToggle">@style/WhiteToggleButton</item>
        <item name="android:listViewStyle">@style/NoScrollBarList</item>
        <item name="android:ratingBarStyle">@style/CustomRatingBar</item>
        <item name="android:scrollViewStyle">@style/NoScrollBarView</item>
        <item name="android:textViewStyle">@style/BlackText</item>
        <item name="android:actionBarStyle">@style/LieferandoActionBarTheme</item>
        <item name="android:popupMenuStyle">@style/MyPopupMenu</item>
        <item name="android:actionMenuTextAppearance">@style/MyTextAppearance</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar_pressed_item_bg</item>
        <item name="vpiLinePageIndicatorStyle">@style/CustomLinePageIndicator</item>
        <item name="vpiTitlePageIndicatorStyle">@style/CustomTitlePageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <item name="vpiUnderlinePageIndicatorStyle">@style/CustomUnderlinePageIndicator</item>
        <item name="actionBarStyle">@style/LieferandoActionBarTheme</item>
        <item name="actionBarItemBackground">@drawable/actionbar_pressed_item_bg</item>
        <item name="actionMenuTextAppearance">@style/MyTextAppearance</item>
        <item name="searchAutoCompleteTextView">@style/searchTextView</item>
        <item name="searchViewSearchIcon">@drawable/ic_action_search</item>
        <item name="popupMenuStyle">@style/MyPopupMenu</item>
    </style>
    <style name="LieferandoActionBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:icon">@drawable/actionbar_icon</item>
        <item name="android:background">@color/actionbar_red</item>
        <item name="android:displayOptions">showHome</item>
        <item name="android:titleTextStyle">@style/MyTextAppearanceActionBar</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar_pressed_item_bg</item>
        <item name="background">@color/actionbar_red</item>
        <item name="actionBarItemBackground">@drawable/actionbar_pressed_item_bg</item>
        <item name="displayOptions">showHome</item>
        <item name="icon">@drawable/actionbar_icon</item>
    </style>
</resources>
